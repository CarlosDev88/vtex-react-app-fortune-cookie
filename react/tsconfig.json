{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmitOnError": false,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": false
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
